@model IEnumerable<ClassLibrary.Page>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="last-news-section border-radius margin-top-60">
    <header><i class="icons icon-doc-2"></i>  <h3> "با عبارت "@ViewBag.Name" @Model.Count()" تعداد </h3> </header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/PageImage/@item.ImageName">
                <h2> <a href="/News/@item.PageId"> @item.Title </a></h2>
                <p>
                    @item.ShortDiscreption
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate </span>
                <a href="/News/@item.PageId" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }
    </ul>
</section>

