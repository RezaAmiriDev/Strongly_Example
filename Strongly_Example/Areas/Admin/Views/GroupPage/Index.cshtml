@model IEnumerable<ClassLibrary.GroupPage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_ViewStart.cshtml";
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1>Hello, world!</h1>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


    <!-- Button trigger modal -->
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupTitle)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => @item.GroupTitle)</td>
                <td>
                    <a class="btn btn-sm btn-warning" onclick="editGroup(@item.GroupId)">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a class="btn btn-sm btn-danger" onclick="deleteGroup(@item.GroupId)">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-sm m-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
        افزودن گروه جدید
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">عنوان</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="myModalBody">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                    <button type="button" class="btn btn-primary">ذخیره کردن</button>
                </div>
            </div>
        </div>
    </div>

    <!--End Modal -->

    <script>
        $("#btnNewGroup").click(function () {
            $.get("/Admin/GroupPage/Create", function (result) {
                $("#myModal").modal('show');
                $("#myModalBody").html(result);
            });

        });
        function editGroup(id) {
            $.get("/Admin/GroupPage/Edit" + id, function (result) {
                $("#myModal").modal('show');
                $("#")
            });
        }
        function deleteGroup(id) {
            $.get("/Admin/GroupPage/Delete" + id, function (result) {
                $("#myModal").modal('show');
            });
        }

    </script>

</body>
</html>
