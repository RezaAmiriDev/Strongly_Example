@model ClassLibrary.Page
@{
    ViewData["Title"] = "Create";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    @Html.AntiForgeryToken()

  <div class="form-horizontal ">
            <h2> Create Page </h2>
  
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="m-4">

            <div>
                <button class="btn btn-primary">
                <a asp-action="Index" style="text-decoration: none;color: white;">Back to List</a>
                </button>
            </div>
           
            <div class="form-group">
                <label asp-for="Title" class="control-label col-md-2 mb-3"></label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="GroupId" class="control-label col-md-2 mb-3"></label>
                <div class="col-md-10">
                    <input asp-for="GroupId" class="form-control" />
                    <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ShortDiscreption" class="control-label col-md-2 mb-3"></label>
                <div class="col-md-10">
                    <textarea asp-for="ShortDiscreption" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="ShortDiscreption" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Text" class="control-label col-md-2 mb-3"></label>
                <div class="col-md-10">
                    <textarea asp-for="Text" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>

        <div class="form-group">
            <label asp-for="Tags" class="control-label col-md-2 mb-3"></label>
            <div class="col-md-10">
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
        </div>

             <div class="form-group">
            <label asp-for="ImageName" class="control-label col-md-2 mb-3">Upload Image</label>
                <div class="col-md-10">
                <input type="file" name="ImgUp" class="form-control-file" />
                    <span asp-validation-for="ImageName" class="text-danger"></span>
                </div>
            </div> 
 
            <div class="form-group">
                <label asp-for="ShowInSlider" class="control-label col-md-2 mb-3"></label>
                <div class="col-md-10">
                    <input asp-for="ShowInSlider" type="checkbox" class="form-check-input" />
                    <span asp-validation-for="ShowInSlider" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 m-5">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
  
     </form>
 </div>

  
     
